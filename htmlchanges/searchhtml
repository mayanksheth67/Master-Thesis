<!-- Update this code to http://localhost:10214/resource/rsp:SearchContent -->

<bs-tabs id='semantic-search' mount-on-enter=true>
    
  <bs-tab event-key='text-Search' title='Text Search' class="basicSearch">
  <semantic-search config='[[searchConfigForFieldsFromQuery "SELECT DISTINCT ?field WHERE { ?field a <http://www.researchspace.org/resource/system/fields/Field> . ?field <http://www.researchspace.org/resource/system/fields/domain> ?domain . ?field <http://www.researchspace.org/resource/system/fields/range> ?range . }"]]'>
     <semantic-search-query-keyword 
        domain='<http://www.cidoc-crm.org/cidoc-crm/E1_CRM_Entity>'
        query='
          SELECT ?subject WHERE { 
             ?subject a ?type .
             ?type rdfs:subClassOf* crm:E1_CRM_Entity .
             ?subject rdfs:label ?label .
             SERVICE <http://www.bigdata.com/rdf/search#search> {
               ?label bds:search ?__token__ ;
                        bds:minRelevance "0.3" ;
                        bds:matchAllTerms "true"  .
             }
          }
        '
        default-query='
            SELECT ?subject WHERE { 
             ?subject a ?type .
             ?type rdfs:subClassOf* crm:E1_CRM_Entity .
            }         
        '
        debounce=500
      ></semantic-search-query-keyword>
      [[> rsp:SearchResults]]  
    </semantic-search>
  </bs-tab>
  <bs-tab event-key='Architect-Search' title='Architects' class="basicSearch">
  <semantic-search config='[[searchConfigForFieldsFromQuery "SELECT DISTINCT ?field WHERE { ?field a <http://www.researchspace.org/resource/system/fields/Field> . ?field <http://www.researchspace.org/resource/system/fields/domain> ?domain . ?field <http://www.researchspace.org/resource/system/fields/range> ?range . }"]]'>
     <semantic-search-query-keyword 
        domain='<http://www.cidoc-crm.org/cidoc-crm/E21_Person>'
        query='
          SELECT ?subject WHERE { 
             ?subject a ?type .
             ?type rdfs:subClassOf* crm:E21_Person .
             ?subject rso:PX_profession <http://www.researchspace.org/profession/architect/> .
             ?subject rdfs:label ?label .
             SERVICE <http://www.bigdata.com/rdf/search#search> {
               ?label bds:search ?__token__ ;
                        bds:minRelevance "0.3" ;
                        bds:matchAllTerms "true"  .
             }
          }
        '
        default-query='
            SELECT ?subject WHERE { 
             ?subject a ?type .
             ?type rdfs:subClassOf* crm:E21_Person .
             ?subject rso:PX_profession <http://www.researchspace.org/profession/architect/> .
            }         
        '
        debounce=500
      ></semantic-search-query-keyword>
      [[> rsp:SearchResults]]  
    </semantic-search>
  </bs-tab>
  <bs-tab event-key='structured-search' title='Structured Search' class="structuredSearch">
      <semantic-search config='[[searchConfigForFieldsFromQuery "SELECT DISTINCT ?field WHERE { ?field a <http://www.researchspace.org/resource/system/fields/Field> . ?field <http://www.researchspace.org/resource/system/fields/domain> ?domain . ?field <http://www.researchspace.org/resource/system/fields/range> ?range . }"]]'>
      <semantic-search-query-builder></semantic-search-query-builder>
      [[> rsp:SearchResults]]
    </semantic-search>
  </bs-tab>
  
  
  <bs-tab event-key='Thesis-Search3' title='Thesis Search 3' class="basicSearch">
  <semantic-search>
     <semantic-search-query-keyword 
       	
        query='
				PREFIX wsdbm: <http://xmlns.com/wsdbm/0.1/> 
				PREFIX	foaf: <http://xmlns.com/foaf/0.1/> 
	      SELECT distinct ?s FROM <http://www.thesis.org/testing/graph> WHERE 
            {
              ?s ?p ?o .
              ?s wsdbm:follows wsdbm:User24 .
              ?s foaf:givenName ?l .
              SERVICE <http://www.bigdata.com/rdf/search#search> {
                           ?l bds:search ?__token__ ;
                                    bds:minRelevance "0.3" ;
                                    bds:matchAllTerms "true"  .
                         }
            }   

        '
        default-query='
            PREFIX wsdbm: <http://xmlns.com/wsdbm/0.1/> 
						PREFIX	foaf: <http://xmlns.com/foaf/0.1/> 
            SELECT distinct ?s FROM <http://www.thesis.org/testing/graph> WHERE 
            {
              
              ?s wsdbm:follows wsdbm:User24 .
              ?s foaf:givenName ?l .
            }      
        '
        debounce=500
      ></semantic-search-query-keyword>
      [[> rsp:SearchResults]]  
    </semantic-search>
  </bs-tab>
  
  
</bs-tabs>/
